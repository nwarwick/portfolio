      <h1 class='hero-heading'><%= data.h1_title %></h1>
      <p class='hero-subheading'>Designer. Developer. Idea-er.</p>
    </div>
    <main>
      <%= yield %>
    </main>
    <%= render "footer", metadata: site.metadata %>
  </body>
